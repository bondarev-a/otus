FROM golang:1.19 AS build-stage
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY ./service/main.go ./
RUN CGO_ENABLED=0 GOOS=linux go build -o /hw1

FROM gcr.io/distroless/base-debian11 AS build-release-stage
WORKDIR /app
COPY --from=build-stage /hw1 /app
EXPOSE 8000
ENTRYPOINT ["/hw1"]

#CMD /hw1-docker 